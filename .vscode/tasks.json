{
	"version": "2.0.0",
	"windows": {
		"options": {
		  "shell": {
			"executable": "cmd.exe",
			"args": [
			  "/C",
			  "\"C:/Program Files (x86)/Microsoft Visual Studio/2019/Community/VC/Auxiliary/Build/vcvars64.bat\"", 
			  "&&"
			]
		  }
		}
	  },
    "tasks": [
        {
			"label": "cmake",
			"type": "cmake",
			"options": {
				"cwd": "${workspaceRoot}/build"
			},
			"command": "build",
		},
		{
			"type":"shell",
			"label": "run test",
			"command": "${workspaceRoot}/build/tests/GTest.exe",
			"dependsOn":["cmake"],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build"
			}
		},
		{
			"type":"shell",
			"label": "run executable",
			"command": "${workspaceRoot}/build/WavAgentTest.exe",
			"dependsOn":["run test"],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
    ]
}